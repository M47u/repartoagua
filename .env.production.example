APP_NAME="Reparto Agua"
APP_ENV=production
APP_KEY=base64:GENERA_TU_KEY_CON_php_artisan_key:generate
APP_DEBUG=false
APP_TIMEZONE=America/Argentina/Buenos_Aires
APP_URL=https://pyfsasoftware.com.ar/sistemaagua

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_AR

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ==================================
# BASE DE DATOS
# ==================================
# IMPORTANTE: Obtén estos datos desde el panel de Hostinger
# En hPanel > Bases de datos > MySQL > Ver detalles de la base de datos

DB_CONNECTION=mysql
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=nombre_base_datos_hostinger
DB_USERNAME=usuario_base_datos_hostinger
DB_PASSWORD=contraseña_base_datos_hostinger

# ==================================
# SESIONES Y CACHÉ
# ==================================
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/sistemaagua
SESSION_DOMAIN=.pyfsasoftware.com.ar

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=reparto_
MEMCACHED_HOST=127.0.0.1

# ==================================
# CORREO ELECTRÓNICO
# ==================================
# Si usas el SMTP de Hostinger:
MAIL_MAILER=smtp
MAIL_HOST=smtp.hostinger.com
MAIL_PORT=465
MAIL_USERNAME=tu-email@pyfsasoftware.com.ar
MAIL_PASSWORD=tu-password-email
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@pyfsasoftware.com.ar
MAIL_FROM_NAME="${APP_NAME}"

# Si no usas email, déjalo en log:
# MAIL_MAILER=log

# ==================================
# AWS (si usas S3 para archivos)
# ==================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==================================
# VITE (importante para assets)
# ==================================
VITE_APP_NAME="${APP_NAME}"
